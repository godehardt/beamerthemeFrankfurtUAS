\mode<presentation>

\definecolor{darkblue}{rgb}{0,0,0.8}
\definecolor{FrankfurtUniversityTitleColor}{RGB}{45,137,204}

\setbeamercolor{alerted text}{fg=darkblue!80!yellow}
\setbeamercolor*{palette primary}{fg=darkblue!60!black,bg=FrankfurtUniversityColor!35}
\setbeamercolor*{palette secondary}{fg=darkblue!70!black,bg=FrankfurtUniversityColor}
\setbeamercolor*{palette tertiary}{bg=darkblue!80!black,fg=FrankfurtUniversityColor}
\setbeamercolor*{palette quaternary}{fg=darkblue,bg=FrankfurtUniversityColor}

\setbeamercolor{itemize item}{fg=FrankfurtUniversityColor}
\setbeamercolor{itemize subitem}{parent=itemize item}
\setbeamercolor{itemize subsubitem}{parent=itemize item}

\setbeamercolor{enumerate item}{fg=FrankfurtUniversityColor}
\setbeamercolor{enumerate subitem}{parent=itemize item}
\setbeamercolor{enumerate subsubitem}{parent=itemize item}

\setbeamercolor*{palette sidebar primary}{fg=FrankfurtUniversityColor}
\setbeamercolor*{palette sidebar secondary}{fg=white}
\setbeamercolor*{palette sidebar tertiary}{fg=FrankfurtUniversityColor}

\setbeamercolor*{titlelike}{parent=palette primary,fg=FrankfurtUniversityTitleColor}
\setbeamercolor{frametitle}{bg=,fg=FrankfurtUniversityTitleColor}
\setbeamercolor{titlefooter}{fg=white,bg=FrankfurtUniversityColor}
\setbeamercolor{footer}{fg=black,bg=white}
\setbeamercolor{frametitle right}{bg=FrankfurtUniversityColor!35}
\setbeamercolor{caption name}{fg=FrankfurtUniversityTitleColor}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\setbeamercolor{section number projected}{bg=black,fg=FrankfurtUniversityColor}
\setbeamercolor{section in toc}{fg=FrankfurtUniversityColor}

\setbeamertemplate{blocks}[default]
\setbeamercolor{block body}{bg=FrankfurtUniversityTitleColor!20!white}
\setbeamercolor{block body alerted}{bg=FB4Color!20!white}
\setbeamercolor{block body example}{bg=FB1Color!20!white}
\setbeamercolor{block title}{fg=white,bg=FrankfurtUniversityTitleColor}
\setbeamercolor{block title alerted}{fg=white,bg=FB4Color}
\setbeamercolor{block title example}{fg=white,bg=FB1Color} 

\mode
<all>
